{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "types": [
      "@types/node",
      "@nuxt/types"
    ]
  },
  "includes": [
    "./src/**/*.ts",
    "./src/**/*.vue"
  ],
  "exclude": [
    ".nuxt",
    "dist",
    "node_modules"
  ]
}
