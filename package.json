    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-nuxt": "2.0.0",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "5.1.3",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "stylelint": "13.12.0",
    "stylelint-config-standard": "21.0.0",
    "stylelint-order": "4.1.0",
    "ts-jest": "26.5.2",
    "typescript": "4.2.2",
    "vue-jest": "3.0.7"
  }
