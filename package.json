{
  "name": "nuxt-vue-playground",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:tokuda109/nuxt-vue-playground.git"
  },
  "scripts": {
    "build": "npm run build:dev",
    "build:dev": "NODE_ENV=development nuxt-ts build",
    "dev": "NODE_ENV=development nuxt-ts",
