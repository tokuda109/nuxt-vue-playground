    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint src/**/*.vue",
    "lint:js": "eslint --ext .vue,.ts src",
    "styleguide:build": "npx nuxt storybook build",
    "styleguide:serve": "npx nuxt storybook"
  },
  "dependencies": {
    "@nuxt/http": "0.6.4",
